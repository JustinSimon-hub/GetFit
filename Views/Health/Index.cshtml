@model GetFit_Application.Models.GymViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1>Gym Dashboard</h1>

<!-- ======= DIETS SECTION ======= -->
<section>
    <h2>Diets</h2>

    <!-- Inline Create Diet Form -->
    <form asp-action="CreateDiet" method="post">
        <div class="row g-2 mb-3">
            <div class="col">
                <input name="Food" class="form-control" placeholder="Food" />
            </div>
            <div class="col">
                <input name="Calories" type="number" class="form-control" placeholder="Calories" />
            </div>
            <div class="col">
                <input name="Protein" type="number" class="form-control" placeholder="Protein" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Add Diet</button>
            </div>
        </div>
    </form>

    <!-- Diets Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Food</th>
                <th>Calories</th>
                <th>Protein</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Diets != null && Model.Diets.Any())
            {
                foreach (var diet in Model.Diets)
                {
                    <tr>
                        <td>@diet.Food</td>
                        <td>@diet.Calories</td>
                        <td>@diet.Protein</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No diets available</td>
                </tr>
            }
        </tbody>
    </table>
</section>

<hr />

<!-- ======= WORKOUTS SECTION ======= -->
<section>
    <h2>Workouts</h2>

    <!-- Inline Create Workout Form -->
    <form asp-action="CreateWorkout" method="post">
        <div class="row g-2 mb-3">
            <div class="col">
                <input name="Exercise" class="form-control" placeholder="Exercise" />
            </div>
            <div class="col">
                <input name="Date" type="date" class="form-control" />
            </div>
            <div class="col">
                <input name="PR" type="number" class="form-control" placeholder="PR" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Add Workout</button>
            </div>
        </div>
    </form>

    <!-- Workouts Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Exercise</th>
                <th>Date</th>
                <th>PR</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Workouts != null && Model.Workouts.Any())
            {
                foreach (var workout in Model.Workouts)
                {
                    <tr>
                        <td>@workout.Exercise</td>
                        <td>@workout.Date.ToShortDateString()</td>
                        <td>@workout.PR</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No workouts available</td>
                </tr>
            }
        </tbody>
    </table>
</section>